<?xml version="1.0" encoding="utf-8"?>

<!--创建痕迹的页面-->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_weight="0"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_weight="0">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="8dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_account"/>

        <TextView
            android:gravity="left|center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="8dp"
            android:text="姓名" />

        <TextView
            android:gravity="left|center"
            android:layout_marginLeft="8dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="日期"/>

    </LinearLayout>

    <EditText
        android:id="@+id/create_et_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:hint="标题(选填)"/>

    <jp.wasabeef.richeditor.RichEditor
        android:id="@+id/create_re_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:scrollbars="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

    </jp.wasabeef.richeditor.RichEditor>

    <LinearLayout
        android:id="@+id/create_ll_function_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/create_iv_bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_info"/>

        <ImageView
            android:id="@+id/create_iv_italic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_info"/>

        <ImageView
            android:id="@+id/create_iv_underline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_info"/>

        <ImageView
            android:id="@+id/create_iv_redo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_info"/>

        <ImageView
            android:id="@+id/create_iv_undo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_info"/>

        <ImageView
            android:id="@+id/create_iv_justify_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_info"
            android:focusable="false"/>

        <ImageView
            android:id="@+id/create_iv_justify_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_info"/>

        <ImageView
            android:id="@+id/create_iv_justify_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_info"/>

        <ImageView
            android:id="@+id/create_iv_insert_picture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_info"/>

    </LinearLayout>

</LinearLayout>