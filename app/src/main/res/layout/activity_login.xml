<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.constraint.Guideline
        android:id="@+id/login_gl_hor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:id="@+id/login_gl_hor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/login_gl_hor3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <ImageView
        android:id="@+id/login_iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/login_gl_hor1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <android.support.constraint.Guideline
        android:id="@+id/login_gl_ver1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/login_gl_ver2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <ImageView
        android:id="@+id/login_iv_username_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/login_iv_password_icon"
        app:layout_constraintStart_toStartOf="@+id/login_gl_ver1"
        app:layout_constraintTop_toTopOf="@+id/login_gl_hor1"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ImageView
        android:id="@+id/login_iv_password_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/login_gl_hor2"
        app:layout_constraintStart_toStartOf="@+id/login_gl_ver1"
        app:srcCompat="@android:drawable/ic_secure" />

    <EditText
        android:id="@+id/login_et_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="32dp"
        android:ems="9"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/login_iv_password_icon"
        app:layout_constraintEnd_toStartOf="@+id/login_gl_ver2"
        app:layout_constraintStart_toEndOf="@+id/login_iv_password_icon"
        app:layout_constraintTop_toTopOf="@+id/login_iv_password_icon" />

    <EditText
        android:id="@+id/login_et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:ems="9"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/login_iv_username_icon"
        app:layout_constraintEnd_toStartOf="@+id/login_gl_ver2"
        app:layout_constraintStart_toEndOf="@+id/login_iv_username_icon"
        app:layout_constraintTop_toTopOf="@+id/login_iv_username_icon" />

    <ImageButton
        android:id="@+id/imgbtn_signin"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/login_gl_ver2"
        app:layout_constraintStart_toStartOf="@+id/login_gl_ver1"
        app:layout_constraintTop_toTopOf="@+id/login_gl_hor2"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageButton
        android:id="@+id/imgbtn_signup"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/login_gl_hor3"
        app:layout_constraintEnd_toStartOf="@+id/login_gl_ver2"
        app:layout_constraintStart_toStartOf="@+id/login_gl_ver1"
        app:layout_constraintTop_toBottomOf="@+id/imgbtn_signin"
        app:srcCompat="@drawable/ic_launcher_background" />

</android.support.constraint.ConstraintLayout>